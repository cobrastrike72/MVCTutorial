@{
	Layout = null; // it has no layout --> since it is actual layout
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<title>@ViewBag.Title</title> <!-- will be sent from the views which uses that layout  because that other view renders first-->
</head>
<body>
    <h1 class="alert alert-danger">Header</h1>
	@RenderBody() <!-- this is where the content of the view that uses that layout will be rendered and that other view will render first -->
    <h1 class="alert alert-success">Footer</h1>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
	@RenderSection("Scripts", required: false) <!-- required is false in order not to make every view that uses that layout add a scritpt section -->
	@* we need that in order to preserve the order of the scripts *@
	<script src="~/js/site.js"></script>
</body>
</html>